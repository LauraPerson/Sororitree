


<div class="d-flex justify-content-center">
  <button type="button" method="PATCH" class="btn-rose" id="button modal" data-toggle="modal" data-target="#Modal">
    <p style="font-size: 20px" class="m-0" >Cadastre-se!</p>
  </button>
</div>
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">Seu cadastro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="cards-form">
         <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nickname" },
                label: "Apelido" %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: "Senha" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: "Confirmar a senha" %>
    <%= f.input :birth_date, start_year: Date.today.year - 40,
                end_year: Date.today.year - 12,
                order: [:day, :month, :year],
                required: true,
                label: "Data de nascimento" %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Sign up", class: "btn-rose"%>
  </div>
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
