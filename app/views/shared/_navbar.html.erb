<nav class="navbar-sororitree">
  <% if user_signed_in? %>
    <p class="logo-navbar">
      <%= link_to image_tag("test2.png", width: 70, height: 60), root_path, class: "link-home-page" %>
    </p>
    <div class="inbox-icon">
      <%= link_to chatrooms_path do  %>
        <i class='fas fa-comments' id="inbox_button"></i>
      <% end %>
      <!-- add avatar logic <-->
      <% if current_user.photo.attached? %>
        <%= link_to cl_image_tag(current_user.photo.key), user_path(current_user), class: "avatar-small" %>
      <% else %>
        <%= link_to image_tag("avatar.png"), user_path(current_user), class: "avatar-small" %>
      <% end %>
    </div>
  <% else %>
    <p class="logo-navbar ml-3">
      <%= link_to image_tag("test2.png", width: 80, height: 70), root_path, class: "link-home-page" %>
    </p>
    <div class="not-signed-in-navbar d-flex align-items-center">
      <%= link_to "Sign up", new_user_registration_path, class: "btn-sugar-cane" %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</nav>
