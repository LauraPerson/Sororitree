<div class="banner-home" style="background-image: url(<%= image_path 'Home/banner-home8.jpg' %>)">
  <div class="row banner-home-infos">
    <div class="col-8">
      <div class="home-title">
        <%= t('pages.home.title') %>
      </div>
      <div class="home-subtitle ">
        <%= t('pages.home.subtitle') %>
      </div>
      <div id="form-homepage">
        <div class="modal-sign-up">
          <button type="button" method="PATCH" class="btn-modal-rose" id="button modal" data-toggle="modal" data-target="#Modal">
            <p style="font-size: 20px" class="m-0" > <%= t('.sign_up') %> </p>
          </button>
        </div>
        <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
          <%= render "modal_homepage" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="post-container">
    <div class="title-posts d-flex flex-wrap justify-content-center">
      <p> <%= t('.posts') %> </p>
    </div>
    <div class="post-presentation d-flex flex-wrap justify-content-center">
      <%  @random_posts.each do |post| %>
        <div class="post-example d-flex flex-column align-items-center justify-content-center" style="background: rgba(255,255,255,1)">
        <div class="avatar-post mx-1 align-self-center" style="background-image: url('<%= image_path("Avatars/avatar_#{post.user.avatar.id}.png", crop: :fill) %>')"></div>
        <p> "<%= post.content[0, 200] %>..." </p>
        <p> <%= post.user.nickname %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="arms d-flex justify-content-start" style="background-image: url(<%= image_path 'Home/banner-arms.jpg' %>)">
  <div class="arms-text">
    <div class="home-title-explanation">
      <br><br>
      <%= t('.search_help') %>
    </div>
    <div class="home-explanation">
      <%= t('.search_help_desc') %>
    </div>
  </div>
</div>

<div class="hands d-flex justify-content-end" style="background-image: url(<%= image_path 'Home/banner-hands.jpg' %>)">
  <div class="hands-text">
    <div class="home-title-explanation">
      <%= t('.help') %>
    </div>
    <div class="home-explanation-right">
      <%= t('.help_desc') %>
    </div>
  </div>
</div>

<div class="heart d-flex justify-content-start" style="background-image: url(<%= image_path 'Home/banner-heart.jpg' %>)">
  <div class="heart-text">
    <div class="home-title-explanation">
      <br><br>
      <%= t('.talk') %>
    </div>
    <div class="home-explanation">
      <%= t('.talk_desc') %>
    </div>
  </div>
</div>



